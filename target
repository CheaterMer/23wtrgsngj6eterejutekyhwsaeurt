    pcall(function()
    task.wait(0.1)
    local target = game:GetService("Players"):WaitForChild(_G.targetr) -- 타겟 찾기 함수 호출
    task.wait(0.1)
    updateInfo(target)
    end) -- 정보 업데이트 함수 호출
end
