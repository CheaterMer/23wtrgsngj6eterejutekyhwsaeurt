local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Title of the library", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

local target = nil
local taser = false
local unbf = false
local uncuff = false
local unhog = false
local noitem = false

local plrs = game:GetService("Players")
local plr = plrs.LocalPlayer

local names = {}
for idx, plr in pairs(game.Players:GetPlayers()) do
    table.insert(names, plr.Name)
end

local plrs = game:GetService("Players")
local plr = plrs.LocalPlayer

function item()
if plr.Character:FindFirstChild("Taser") then
print("a")
else 
print("b")
plr.Backpack.Taser.Parent = plr.Character
end
end

spawn(function()
while noitem == ture do
for x, v in pairs(game.Players:GetPlayers()) do
    if v.Name == game:GetService("Players").LocalPlayer.Name then
        print("me")
    else
        local args = {
            [1] = workspace:WaitForChild(v)
        }
        
        game:GetService("ReplicatedStorage"):WaitForChild("UnCuffed"):FireServer(unpack(args))
end
end
end
end)

spawn(function()
while wait() do
    wait()
	item()
    if taser == true then
        local args = {
            [1] = "Hit",
            [2] = game:GetService("Players").LocalPlayer.Character.Taser,
            [3] = game:GetService("Players"):WaitForChild(target).Character.Head
        }
        
        game:GetService("ReplicatedStorage"):WaitForChild("Tase"):FireServer(unpack(args))
        wait()
        local args = {
            [1] = "Recharge",
            [2] = game:GetService("Players").LocalPlayer.Character.Taser
        }
        
        game:GetService("ReplicatedStorage"):WaitForChild("Tase"):FireServer(unpack(args))
    end
end
end)

spawn(function()
while wait() do
wait()
if unhog == true then

end
end
end)

spawn(function()
while wait() do
if uncuff == true then
if plr.Character.IsCuffed == true then
    local args = {
        [1] = workspace:WaitForChild(target)
    }
    
    game:GetService("ReplicatedStorage"):WaitForChild("UnCuffed"):FireServer(unpack(args))
end
end
end
end
)

spawn(function()
while wait() do
if unbf == true then
if plr.Character.IsHogged == true then
    local args = {
        [1] = workspace:WaitForChild(target),
        [2] = "false"
    }
    
    game:GetService("ReplicatedStorage"):WaitForChild("BlindFold"):FireServer(unpack(args))
end
end
end
end
)


local Tab = Window:MakeTab({
	Name = "main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Section = Tab:AddSection({
	Name = "Section"
})

Tab:AddButton({
	Name = "Get all!",
	Callback = function()
      		for i,v in pairs(workspace:GetChildren()) do
    if v:IsA("Tool") then
        fireclickdetector(v.ClickDetector)
    end
end
  	end    
})

Tab:AddDropdown({
	Name = "Dropdown",
	Default = "1",
	Options = names,
	Callback = function(Value)
		print(Value)
        target = Value
	end    
})

Tab:AddToggle({
	Name = "noitem",
	Default = false,
	Callback = function(Value)
		noitem = Value
	end    
})

Tab:AddToggle({
	Name = "taser",
	Default = false,
	Callback = function(Value)
		taser = Value
	end    
})

Tab:AddToggle({
	Name = "uncuff",
	Default = false,
	Callback = function(Value)
		uncuff = Value
	end    
})

Tab:AddToggle({
	Name = "unbf",
	Default = false,
	Callback = function(Value)
		unbf = Value
	end    
})

OrionLib:Init()
